<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/appAccent</item>
        <!--context menu overlap the toolbar-->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!--<item name="android:windowBackground">@android:color/white</item>-->
    </style>


    <style name="AppToolbar" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/appInactive</item>
    </style>

    <style name="PopupAnm" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
</resources>
