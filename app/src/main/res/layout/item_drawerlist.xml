<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:gravity="center_vertical"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/drawer_item_image"
        android:layout_width="@dimen/item_type_image_length"
        android:layout_height="@dimen/item_type_image_length"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/drawer_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/drawer_item_image"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textSize="18sp" />
</RelativeLayout>