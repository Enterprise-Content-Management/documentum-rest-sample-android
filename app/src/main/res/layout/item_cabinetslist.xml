<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cabinetslist_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_cabinetslist_image"
        android:layout_width="@dimen/loading_image_length"
        android:layout_height="@dimen/loading_image_length"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_cabinetslist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/textGray"
            android:maxLines="1"
            android:textSize="@dimen/item_title_size" />

        <TextView
            android:id="@+id/item_cabinetslist_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/loginTextGray"
            android:textSize="@dimen/item_date_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_lock_image"
        android:layout_width="@dimen/item_about_image_length"
        android:layout_height="@dimen/item_about_image_length"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="32dp"
        android:layout_weight="0" />

    <ImageView
        android:id="@+id/item_content_image"
        android:layout_width="@dimen/item_about_image_length"
        android:layout_height="@dimen/item_about_image_length"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="32dp"
        android:layout_weight="0" />

    <ImageView
        android:id="@+id/item_about_image"
        android:layout_width="@dimen/item_about_image_length"
        android:layout_height="@dimen/item_about_image_length"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="32dp"
        android:layout_weight="0"
        android:src="@drawable/vic_more" />
</LinearLayout>